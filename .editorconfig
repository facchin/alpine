# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# MD-Files
[*.md]
indent_style = space
indent_size = 4
max_line_length = 120

# YML-Files
[*.yml]
indent_style = space
indent_size = 2

# Shell script
[*.sh]
indent_style = space
indent_size = 4
